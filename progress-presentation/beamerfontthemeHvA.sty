\mode<presentation>

% Font configuration
% Set Helvetica as font
\renewcommand{\rmdefault}{ptm}
\renewcommand{\sfdefault}{phv}
\renewcommand{\familydefault}{\sfdefault}

% Fonts on title page
\setbeamerfont{title}{size=\huge, series=\bfseries}
\setbeamerfont{subtitle}{size=\large, series=\mdseries}
\setbeamerfont{institute}{size=\tiny, series=\bfseries}
\setbeamerfont{author}{size=\scriptsize}
\setbeamerfont{date}{parent=author}

% Fonts in frame title
\setbeamerfont{frametitle}{size=\Large, series=\bfseries}
\setbeamerfont{framesubtitle}{size=\large, series=\mdseries}

% Fonts in footline
\setbeamerfont*{footline}{size=\tiny}
\setbeamerfont*{page number in head/foot}{parent=footline}
\setbeamerfont*{section in head/foot}{parent=footline}

\mode<all>
