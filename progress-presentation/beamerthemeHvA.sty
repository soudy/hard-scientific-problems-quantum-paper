\mode<presentation>

% Requirement
\RequirePackage{tikz}
\RequirePackage{varwidth}

% Options
% Language of university logo
\DeclareOptionBeamer{logo}[ENG]{\def\beamer@themeHvA@logo{#1}}
\ExecuteOptionsBeamer{logo=NL}

\DeclareOptionBeamer{richting}[ICT]{\def\beamer@innerthemeHvA@richting{#1}}
\DeclareOptionBeamer{richting}[TI]{\def\beamer@innerthemeHvA@richting{#1}}
\DeclareOptionBeamer{richting}[BIM]{\def\beamer@innerthemeHvA@richting{#1}}
\DeclareOptionBeamer{richting}[GD]{\def\beamer@innerthemeHvA@richting{#1}}
\DeclareOptionBeamer{richting}[CS]{\def\beamer@innerthemeHvA@richting{#1}}
\DeclareOptionBeamer{richting}[SE]{\def\beamer@innerthemeHvA@richting{#1}}
\ExecuteOptionsBeamer{richting=TI}

% Main color of title page and highlights (such as block elements and footline).
\DeclareOptionBeamer{maincolor}{\def\beamer@themeHvA@maincolor{#1}}
\ExecuteOptionsBeamer{maincolor=hva-blauw}
\ProcessOptionsBeamer

% Settings
\useinnertheme[logo=\beamer@themeHvA@logo, richting=\beamer@innerthemeHvA@richting]{HvA}
\useoutertheme{HvA}
\usecolortheme[maincolor=\beamer@themeHvA@maincolor]{HvA}
\usefonttheme{HvA}

\setbeamertemplate{navigation symbols}{}

\mode<all>
